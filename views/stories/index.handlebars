<h1>Stories</h1>
<div class="row">
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        <div>
        <a href="/stories/edit/{{id}}" class="btn-floating halfway-fab teal">
        <i class="fa fa-pencil"></i>
        </a>
      </div>
      </div>
      <div class="card-content center-align">
        <h5>{{title}}</h5>
        <p class="story-text">{{stripTags (truncate body 150)}}</p>
        <br>
        <div class="chip">
          <img src="{{user.image}}" alt="User image"> 
          {{user.firstName}} {{user.lastName}} 
        </div>
      </div>
      <div class="card-action center-align blue lighten-1">
        <a href="/stories/show/{{id}}" class="btn red">
        Read More... <i class="fa fa-chevron-circle-right"></i>
        </a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No stories found. Share your amazing stories with the world.</p>
  {{/each}}
</div>